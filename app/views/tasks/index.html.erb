<h2>My tasks:</h2>
<ul>
<% @tasks.each do |task| %>
  <h3> <%= task.id %>. <%= link_to task.name.capitalize, task_path(task) %> </h3>

  <p> Description: <%= task.description %></p>
  <p>Status: (<%= task.status %>)</p>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
</ul>




